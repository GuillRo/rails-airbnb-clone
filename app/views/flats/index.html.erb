<div class="text-center" style="margin-top: 100px;"><h1>All the flats</h1></div>

<!-- BACK-END (ONLY) OF GEOMAP CODE -->
<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
<!-- END -->


<div class="flat-cards">
  <% @flats.each do |flat| %>
    <div class="flat-card text-center">
        <%= link_to flat_path(flat)  do %>
        <div class="flat-card-body" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.4) 0%, rgba(0,36,61,0.4) 50%), url(' <%= cl_image_path flat.photo if flat.photo.url %> ' )">
          <div class="flat-card-description">
            <%= flat.title %>
        </div>
      </div>
      <% end %>
    </div>
    <% end %>
</div>

