<h1>Add a new flat</h1>

<%= simple_form_for(@flat) do |f| %>
 <% if @flat.errors.any? %>
   <div class="errors-container">
     <ul>
       <% @flat.errors.full_messages.each do |message| %>
         <li><%= message %></li>
       <% end %>
     </ul>
   </div>
  <% end %>

  <div class="form-group">
      <%= f.input :description %>
      <%= f.input :address %>
      <%= f.input :nbr_rooms %>
      <%= f.input :nbr_beds %>
      <%= f.association :amenities, collection: Amenity.all.order(:name),    as: :check_boxes  %>
      <%= f.submit "Create", class: "btn btn-primary" %>
  </div>

  <% end %>

